{
  "manifest_version": 3,
  "name": "Remote Link Opener",
  "version": "2.0",
  "description": "Điều khiển thiết bị từ xa - Bản duy trì kết nối tối đa cho Firefox",
  "permissions": [
    "tabs",
    "storage",
    "scripting",
    "alarms"
  ],
  "host_permissions": [
    "https://api.ipify.org/",
    "https://firestore.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "remote-control-ext-ultra@kien-pham-system.com",
      "strict_min_version": "109.0"
    }
  }
}