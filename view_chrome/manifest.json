{
  "manifest_version": 3,
  "name": "Remote Link Opener",
  "version": "1.4",
  "description": "Điều khiển mở link và theo dõi tiến trình video YouTube",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "background",
    "scripting"
  ],
  "host_permissions": [
    "https://api.ipify.org/",
    "https://firestore.googleapis.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}